<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Level1Activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <Button
                    android:id="@+id/bacl"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/imgback" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Level 2"
                    android:textStyle="bold"
                    android:textColor="#04E6DE"
                    android:textSize="20dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv"
                    android:textColor="#EC0202"
                    android:layout_width="150dp"
                    android:layout_height="30dp" />

                <ImageView
                    android:id="@+id/loa"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="100dp"
                    android:src="@drawable/volume"/>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:background="@drawable/fff"
                android:id="@+id/Game">

                <AbsoluteLayout
                    android:id="@+id/GameField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroud_number">

                    <Button
                        android:id="@+id/Button00"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="0px"
                        android:layout_y="0px"
                        android:background="#6666"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button01"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="75px"
                        android:layout_y="0px"
                        android:background="#fff"
                        android:text="1"
                        android:textColor="#0A0909"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button02"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="150px"
                        android:layout_y="0px"
                        android:background="#fff"
                        android:text="2"
                        android:textColor="#FA0000"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button03"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="225px"
                        android:layout_y="0px"
                        android:background="#fff"
                        android:text="3"
                        android:textColor="#FA6400"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button04"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="0px"
                        android:layout_y="75px"
                        android:background="#fff"
                        android:text="4"
                        android:textColor="#FAEE00"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button05"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="75px"
                        android:layout_y="75px"
                        android:background="#fff"
                        android:text="5"
                        android:textColor="#25FA00"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button06"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="150px"
                        android:layout_y="75px"
                        android:background="#fff"
                        android:text="6"
                        android:textColor="#00FAC8"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button07"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="225px"
                        android:layout_y="75px"
                        android:background="#fff"
                        android:text="7"
                        android:textColor="#0064FA"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button08"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="0px"
                        android:layout_y="150px"
                        android:background="#fff"
                        android:text="8"
                        android:textColor="#FA00E1"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button09"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="75px"
                        android:layout_y="150px"
                        android:background="#fff"
                        android:text="9"
                        android:textColor="#FA00E1"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button10"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="150px"
                        android:layout_y="150px"
                        android:background="#fff"
                        android:text="10"
                        android:textColor="#FA00E1"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button11"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="225px"
                        android:layout_y="150px"
                        android:background="#fff"
                        android:text="11"
                        android:textColor="#FA00E1"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button12"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="0px"
                        android:layout_y="225px"
                        android:background="#fff"
                        android:text="12"
                        android:textColor="#FA00E1"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button13"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="75px"
                        android:layout_y="225px"
                        android:background="#fff"
                        android:text="13"
                        android:textColor="#FA00E1"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button14"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="150px"
                        android:layout_y="225px"
                        android:background="#fff"
                        android:text="14"
                        android:textColor="#FA00E1"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button15"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_x="225px"
                        android:layout_y="225px"
                        android:background="#fff"
                        android:text="15"
                        android:textColor="#FA00E1"
                        android:textSize="48px"></Button>
                </AbsoluteLayout>

                <TextView
                    android:layout_below="@+id/GameField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MoveText"
                    android:textSize="28px"
                    android:text="@string/moves_title">
                </TextView>

                <TextView
                    android:id="@+id/FeedbackTitleText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/MoveText"
                    android:text="@string/feedback_title"
                    android:textSize="28px">
                </TextView>

                <TextView
                    android:id="@+id/MoveCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/GameField"
                    android:layout_toRightOf="@+id/MoveText"
                    android:text="0"
                    android:textSize="28px"
                    android:layout_marginLeft="5px"
                    android:layout_alignBaseline="@+id/MoveText">
                </TextView>


                <TextView
                    android:id="@+id/FeedbackText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="28px"
                    android:layout_alignRight="@+id/GameField"
                    android:layout_below="@+id/FeedbackTitleText"
                    android:text="@string/game_feedback_text"
                    android:layout_alignBaseline="@+id/FeedbackTitleText">
                </TextView>
            </RelativeLayout>

            <Button
                android:id="@+id/start"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="Mix"/>


        </LinearLayout>
    </FrameLayout>



</LinearLayout>