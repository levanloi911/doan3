<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Level1Activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <Button
                    android:id="@+id/bacl"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/imgback" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Level 1"
                    android:textColor="#0BEC16"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:textColor="#EC0202" />

                <ImageView
                    android:id="@+id/loa"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="100dp"
                    android:src="@drawable/volume" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/Game"
                android:layout_width="fill_parent"
                android:layout_height="370dp"
                android:background="@drawable/fff">

                <AbsoluteLayout
                    android:id="@+id/GameField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/backgroud_number">

                    <Button
                        android:id="@+id/Button00"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_x="5px"
                        android:layout_y="5px"
                        android:background="#6666"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button01"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_x="110px"
                        android:layout_y="5px"
                        android:background="#fff"
                        android:text="1"
                        android:textColor="#0A0909"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button02"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_x="215px"
                        android:layout_y="5px"
                        android:background="#fff"
                        android:text="2"
                        android:textColor="#FA0000"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button03"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_x="5px"
                        android:layout_y="110px"
                        android:background="#fff"
                        android:text="3"
                        android:textColor="#FA6400"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button04"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_x="110px"
                        android:layout_y="110px"
                        android:background="#fff"
                        android:text="4"
                        android:textColor="#FAEE00"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button05"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_x="215px"
                        android:layout_y="110px"
                        android:background="#fff"
                        android:text="5"
                        android:textColor="#25FA00"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button06"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_x="5px"
                        android:layout_y="215px"
                        android:background="#fff"
                        android:text="6"
                        android:textColor="#00FAC8"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button07"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_x="110px"
                        android:layout_y="215px"
                        android:background="#fff"
                        android:text="7"
                        android:textColor="#0064FA"
                        android:textSize="48px"></Button>

                    <Button
                        android:id="@+id/Button08"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_x="215px"
                        android:layout_y="215px"
                        android:background="#fff"
                        android:text="8"
                        android:textColor="#FA00E1"
                        android:textSize="48px"></Button>

                </AbsoluteLayout>

                <TextView
                    android:id="@+id/MoveText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/GameField"
                    android:text="@string/moves_title"
                    android:textSize="28px"></TextView>

                <TextView
                    android:id="@+id/FeedbackTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/MoveText"
                    android:text="@string/feedback_title"
                    android:textSize="28px"></TextView>

                <TextView
                    android:id="@+id/MoveCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/GameField"
                    android:layout_alignBaseline="@+id/MoveText"
                    android:layout_marginLeft="5px"
                    android:layout_toRightOf="@+id/MoveText"
                    android:text="0"
                    android:textSize="28px"></TextView>


                <TextView
                    android:id="@+id/FeedbackText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/FeedbackTitleText"
                    android:layout_alignBaseline="@+id/FeedbackTitleText"
                    android:layout_alignRight="@+id/GameField"
                    android:text="@string/game_feedback_text"
                    android:textSize="28px"></TextView>

            </RelativeLayout>

            <Button
                android:id="@+id/start"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="Mix" />


        </LinearLayout>
    </FrameLayout>

</LinearLayout>