<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BaxbaActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/loa"
                    android:layout_marginLeft="290dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/volume"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="350dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/Game">
                <AbsoluteLayout
                    android:layout_height="wrap_content"
                    android:id="@+id/GameField"
                    android:paddingLeft="60dp"
                    android:layout_width="fill_parent">
                    <Button
                        android:id="@+id/Button00"
                        android:layout_height="100px"
                        android:layout_width="100px"
                        android:layout_x="5px"
                        android:layout_y="5px"
                        android:textSize="48px"
                        android:background="#08BAD8">
                    </Button>

                    <Button
                        android:id="@+id/Button01"
                        android:layout_height="100px"
                        android:layout_width="100px"
                        android:layout_x="110px"
                        android:layout_y="5px"
                        android:textColor="#0A0909"
                        android:text="1"
                        android:textSize="48px">
                    </Button>

                    <Button
                        android:id="@+id/Button02"
                        android:layout_height="100px"
                        android:layout_width="100px"
                        android:layout_x="215px"
                        android:layout_y="5px"
                        android:textColor="#FA0000"
                        android:text="2"
                        android:textSize="48px">
                    </Button>

                    <Button
                        android:id="@+id/Button03"
                        android:layout_height="100px"
                        android:layout_width="100px"
                        android:layout_x="5px"
                        android:textColor="#FA6400"
                        android:layout_y="110px"
                        android:text="3"
                        android:textSize="48px">
                    </Button>

                    <Button
                        android:id="@+id/Button04"
                        android:layout_height="100px"
                        android:layout_width="100px"
                        android:layout_x="110px"
                        android:layout_y="110px"
                        android:text="4"
                        android:textColor="#FAEE00"
                        android:textSize="48px">
                    </Button>

                    <Button
                        android:id="@+id/Button05"
                        android:layout_height="100px"
                        android:layout_width="100px"
                        android:layout_x="215px"
                        android:textColor="#25FA00"
                        android:layout_y="110px"
                        android:text="5"
                        android:textSize="48px">
                    </Button>

                    <Button
                        android:id="@+id/Button06"
                        android:layout_height="100px"
                        android:layout_width="100px"
                        android:layout_x="5px"
                        android:textColor="#00FAC8"
                        android:layout_y="215px"
                        android:text="6"
                        android:textSize="48px">
                    </Button>

                    <Button
                        android:id="@+id/Button07"
                        android:layout_height="100px"
                        android:layout_width="100px"
                        android:textColor="#0064FA"
                        android:layout_x="110px"
                        android:layout_y="215px"
                        android:text="7"
                        android:textSize="48px">
                    </Button>

                    <Button
                        android:id="@+id/Button08"
                        android:layout_height="100px"
                        android:layout_width="100px"
                        android:layout_x="215px"
                        android:textColor="#FA00E1"
                        android:layout_y="215px"
                        android:text="8"
                        android:textSize="48px">
                    </Button>
                </AbsoluteLayout>

                <TextView
                    android:layout_below="@+id/GameField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MoveText"
                    android:textSize="28px"
                    android:text="@string/moves_title">

                </TextView>

                <TextView
                    android:id="@+id/FeedbackTitleText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/MoveText"
                    android:text="@string/feedback_title"
                    android:textSize="28px">
                </TextView>

                <TextView
                    android:layout_below="@+id/GameField"
                    android:layout_toRightOf="@+id/MoveText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MoveCounter"
                    android:text="0"
                    android:textSize="28px"
                    android:layout_marginLeft="5px"
                    android:layout_alignBaseline="@+id/MoveText">
                </TextView>


                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="28px"
                    android:id="@+id/FeedbackText"
                    android:layout_alignRight="@+id/GameField"
                    android:layout_below="@+id/FeedbackTitleText"
                    android:text="@string/game_feedback_text">
                </TextView>
            </RelativeLayout>

            <Button
                android:id="@+id/start"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="Restar"/>


        </LinearLayout>
    </FrameLayout>



</android.support.v4.widget.DrawerLayout>