<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nen"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tvpuzzle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Puzzle"
        android:textStyle="bold"
        android:textSize="15pt"
        android:textColor="#FF0099"/>

<TextView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:background="@drawable/pulzzz"/>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/batdau"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:text="Bắt đầu" />
    <Button
        android:id="@+id/videoView"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/bt2"
        android:layout_marginTop="10dp"
        android:text="Xem hướng dẫn" />
    <Button
        android:id="@+id/close"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/bt3"
        android:textColor="#fff"
        android:text="Thoát game" />

</LinearLayout>