                    android:layout_x="85px"
                    android:layout_y="255px"
                    android:text="16"
                    android:background="#F8F500"
                    android:textSize="30px"></Button>

                <Button
                    android:id="@+id/bt17"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_x="170px"
                    android:layout_y="255px"
                    android:text="17"
                    android:background="#F8F500"
                    android:textSize="30px"></Button>

                <Button
                    android:id="@+id/bt18"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_x="255px"
                    android:layout_y="255px"
                    android:text="18"
                    android:background="#F8F500"
                    android:textSize="30px"></Button>
                <Button
                    android:id="@+id/bt19"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_x="340px"
