                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_x="0px"
                    android:layout_y="0px"
                    android:background="#8F7171"
                    android:textSize="30px"></Button>

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_x="85px"
                    android:background="#F8F500"
                    android:layout_y="0px"
                    android:text="1"
                    android:textSize="30px"></Button>

                <Button
                    android:id="@+id/bt2"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_x="170px"
                    android:layout_y="0px"
                    android:background="#F8F500"
                    android:text="2"
                    android:textSize="30px"></Button>

                <Button
                    android:id="@+id/bt3"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_x="255px"
                    android:layout_y="0px"
                    android:text="3"
                    android:background="#F8F500"
                    android:textSize="30px"></Button>
                <Button
                    android:id="@+id/bt4"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_x="340px"
                    android:layout_y="0px"
                    android:text="4"
                    android:background="#F8F500"
                    android:textSize="30px"></Button>

                <Button
                    android:id="@+id/bt5"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_x="0px"
                    android:layout_y="85px"
                    android:text="5"
                    android:background="#F8F500"
                    android:textSize="30px"></Button>

                <Button
                    android:id="@+id/bt6"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_x="85px"
                    android:layout_y="85px"
                    android:text="6"
                    android:background="#F8F500"
                    android:textSize="30px"></Button>

                <Button
                    android:id="@+id/bt7"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_x="170px"
                    android:layout_y="85px"
