<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Game">
    <AbsoluteLayout
        android:layout_height="wrap_content"
        android:id="@+id/GameField"
        android:padding="20dp"
        android:layout_width="fill_parent">
        <Button
            android:id="@+id/Button00"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="5px"
            android:layout_y="5px"
            android:textSize="30px"
            android:background="#08BAD8">
        </Button>

        <Button
            android:id="@+id/Button01"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="110px"
            android:layout_y="5px"
            android:text="1"
            android:textSize="30px">
        </Button>

        <Button
            android:id="@+id/Button02"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="215px"
            android:layout_y="5px"
            android:text="2"
            android:textSize="30px">
        </Button>

        <Button
            android:id="@+id/Button03"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="320px"
            android:layout_y="5px"
            android:text="3"
            android:textSize="30px">
        </Button>
        <Button
            android:id="@+id/Button04"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="5px"
            android:layout_y="110px"
            android:text="4"
            android:textSize="30px">
        </Button>

        <Button
            android:id="@+id/Button05"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="110px"
            android:layout_y="110px"
            android:text="5"
            android:textSize="30px">
        </Button>

        <Button
            android:id="@+id/Button06"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="215px"
            android:layout_y="110px"
            android:text="6"
            android:textSize="30px">
        </Button>

        <Button
            android:id="@+id/Button07"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="320px"
            android:layout_y="110px"
            android:text="7"
            android:textSize="30px">
        </Button>

        <Button
            android:id="@+id/Button08"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="5px"
            android:layout_y="215px"
            android:text="8"
            android:textSize="30px"/>
        <Button
            android:id="@+id/Button09"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="110px"
            android:layout_y="215px"
            android:text="9"
            android:textSize="30px"/>
        <Button
            android:id="@+id/Button10"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="215px"
            android:layout_y="215px"
            android:text="10"
            android:textSize="30px"/>
        <Button
            android:id="@+id/Button11"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="320px"
            android:layout_y="215px"
            android:text="11"
            android:textSize="30px"/>

        <Button
            android:id="@+id/Button12"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="5px"
            android:layout_y="320px"
            android:text="12"
            android:textSize="30px"/>
        <Button
            android:id="@+id/Button13"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="110px"
            android:layout_y="320px"
            android:text="13"
            android:textSize="30px"/>
        <Button
            android:id="@+id/Button15"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="215px"
            android:layout_y="320px"
            android:text="14"
            android:textSize="30px"/>
        <Button
            android:id="@+id/Button16"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="320px"
            android:layout_y="320px"
            android:text="15"
            android:textSize="30px">
        </Button>
    </AbsoluteLayout>

    <TextView android:layout_below="@+id/GameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MoveText"
        android:textSize="28px"
        android:text="@string/moves_title">

    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/MoveText"
        android:id="@+id/FeedbackTitleText"
        android:text="@string/feedback_title"
        android:textSize="28px">
    </TextView>

    <TextView
        android:layout_below="@+id/GameField"
        android:layout_toRightOf="@+id/MoveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MoveCounter"
        android:text="0"
        android:textSize="28px"
        android:layout_marginLeft="5px"
        android:layout_alignBaseline="@+id/MoveText">
    </TextView>




    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="28px"
        android:id="@+id/FeedbackText"
        android:layout_alignRight="@+id/GameField"
        android:layout_below="@+id/FeedbackTitleText"
        android:text="@string/game_feedback_text">
    </TextView>
</RelativeLayout>
